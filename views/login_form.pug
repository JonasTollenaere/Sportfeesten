extends layout

block content
  
  h1 #{title}
  br
  form.form(role='form', method="POST")
    div.form-group
        label(for='sportfeest') Gebruikersnaam:
        input.form-control(type='text', name="username", placeholder='Vul hier je gebruikersnaam in')
        label(for='sportfeest') Wachtwoord:
        input.form-control(type='password', name="password", placeholder='Vul hier je wachtwoord in')
        input(type='text', name="referer", value=(undefined===referer ? '' : referer), hidden)

    button.btn.btn-primary.style(type='submit' id='inloggenbutton' title="Inloggen") Inloggen

  if errors 
    ul
      for error in errors
        li!= error.msg 

