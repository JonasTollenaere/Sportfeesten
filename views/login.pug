extends layout

block content
  
  h1 Aanmelden als administrator
  br
  form(role='form', action="/login",method="post", style='max-width: 300px;').form-group
    input.form-control(type='text', name="username", placeholder='Enter Username').form-group
    input.form-control(type='password', name="password", placeholder='Paswoord')
    button.btn.btn-primary.style(type='submit' id='inloggenbutton' title="Inloggen") Inloggen

  if errors 
    ul
      for error in errors
        li!= error.msg 

